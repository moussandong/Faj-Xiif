{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>N° produit</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ produit.imageName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">retour à la liste</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
