{% extends 'base.html.twig' %}

{% block title %}
	Faj xiif
{% endblock %}

{% block body %}


<div class="container">
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				{% for images in commerces %}
					<li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.first %} class="active" {% endif %}></li>
				{% endfor %}
			</ol>

			<div class="carousel-inner">
				{% for image in commerces %}
					<div class="carousel-item {% if loop.first %}active{% endif %}">
						<img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.imageName }}" height="400px"
                     width="300px" class="d-block w-100"/>
						<div class="carousel-caption d-none d-md-block"></div>
					</div>
				{% endfor %}
			</div>

			<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">
					Previous
				</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">
					Next
				</span>
			</a>
		</div>

	</div>


</button></div></div></body></html><div class="example-wrapper">{% if app.user %}<h1>Bonjour{{ app.user.prenom }}!</h1><p>{% for role in app. user.roles %}
{% if role == "ROLE_USER" %}
	Content de vous revoir, nous vous avons préparé une panopli de produits rien que pour vous !
{% elseif role == "ROLE_ADMIN" %}
	Bienvenue monsieur le technicien, nous vous faisons confiance pour la maintenance du site !
{% else %}
	Vos clients n'attendent que vous, à vous de jouer !
{% endif %}{% endfor %}</p>{% endif %}</div><div class="container"><div class="row">{%  for commerce in commerces  %}<div class="col-4 mt-4">
<div class="border border-dark rounded p-2 clearfix" >
	<img class="img-fluid rounded" src="{{ vich_uploader_asset(commerce, 'imageFile') }}" alt="{{ commerce.imageName }}"
                    width="100%" height="100%"/>
	<br>
	<h3>
		{{commerce.nom}}
	</h3>
	{{ commerce.disponibilite ? 'Ouvert' : 'Fermé'}}
	<a href="{{ path('affiche_commerce', {'id': commerce.id}) }} " class="btn btn-success
																																																																																																																																																										float-right">
		Visiter
	</a>
</div></div>{% endfor %}{% endblock %}
